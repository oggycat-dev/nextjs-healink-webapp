# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env.production.local and update with your production values

# ========================================
# API GATEWAY CONFIGURATION
# ========================================
# AWS API Gateway URL - UPDATE THIS WITH YOUR AWS ENDPOINT
NEXT_PUBLIC_API_GATEWAY_URL=https://api.healink.com

# ========================================
# APP CONFIGURATION
# ========================================
NEXT_PUBLIC_APP_NAME=Healink
NEXT_PUBLIC_APP_DESCRIPTION="Nuôi dưỡng cảm xúc mỗi ngày"

# Production App URL - UPDATE THIS WITH YOUR VERCEL URL
NEXT_PUBLIC_APP_URL=https://healink.vercel.app

# ========================================
# AUTHENTICATION CONFIGURATION
# ========================================
NEXT_PUBLIC_AUTH_TOKEN_KEY=healink_auth_token
NEXT_PUBLIC_AUTH_REFRESH_TOKEN_KEY=healink_refresh_token
NEXT_PUBLIC_ACCESS_TOKEN_EXPIRY=3600
NEXT_PUBLIC_REFRESH_TOKEN_EXPIRY=604800

# ========================================
# FEATURE FLAGS
# ========================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_MOCK_DATA=false

# ========================================
# THIRD-PARTY INTEGRATIONS
# ========================================
# Google Analytics (Optional)
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry Error Tracking (Optional)
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# AWS S3 Configuration (Optional)
# NEXT_PUBLIC_AWS_S3_BUCKET=healink-upload-file
# NEXT_PUBLIC_AWS_S3_REGION=ap-southeast-2

# ========================================
# PRODUCTION SETTINGS
# ========================================
NEXT_PUBLIC_LOG_LEVEL=error
NEXT_PUBLIC_API_TIMEOUT=30000

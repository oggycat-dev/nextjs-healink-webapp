# ========================================
# API GATEWAY CONFIGURATION
# ========================================
# Main API Gateway URL - Change this when deploying to AWS
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:5010

# Alternative: AWS API Gateway URL (uncomment when deploying)
# NEXT_PUBLIC_API_GATEWAY_URL=https://api.healink.com

# ========================================
# SPECIFIC SERVICE ENDPOINTS (Optional)
# ========================================
# If you need to override specific services, uncomment below
# NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:5001
# NEXT_PUBLIC_USER_SERVICE_URL=http://localhost:5002
# NEXT_PUBLIC_CONTENT_SERVICE_URL=http://localhost:5003
# NEXT_PUBLIC_SUBSCRIPTION_SERVICE_URL=http://localhost:5007
# NEXT_PUBLIC_PAYMENT_SERVICE_URL=http://localhost:5006
# NEXT_PUBLIC_NOTIFICATION_SERVICE_URL=http://localhost:5008

# ========================================
# APP CONFIGURATION
# ========================================
NEXT_PUBLIC_APP_NAME=Healink
NEXT_PUBLIC_APP_DESCRIPTION="Nuôi dưỡng cảm xúc mỗi ngày"

# App URL (Change for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Alternative: Production URL (uncomment when deploying)
# NEXT_PUBLIC_APP_URL=https://healink.vercel.app

# ========================================
# AUTHENTICATION CONFIGURATION
# ========================================
# Token storage key
NEXT_PUBLIC_AUTH_TOKEN_KEY=healink_auth_token
NEXT_PUBLIC_AUTH_REFRESH_TOKEN_KEY=healink_refresh_token

# Token expiration (in seconds)
NEXT_PUBLIC_ACCESS_TOKEN_EXPIRY=3600
NEXT_PUBLIC_REFRESH_TOKEN_EXPIRY=604800

# ========================================
# FEATURE FLAGS
# ========================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=false

# ========================================
# THIRD-PARTY INTEGRATIONS
# ========================================
# Google Analytics (Optional)
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry Error Tracking (Optional)
# NEXT_PUBLIC_SENTRY_DSN=

# AWS S3 Configuration (Optional)
# NEXT_PUBLIC_AWS_S3_BUCKET=healink-upload-file
# NEXT_PUBLIC_AWS_S3_REGION=ap-southeast-2

# ========================================
# DEVELOPMENT SETTINGS
# ========================================
# Log Level: debug | info | warn | error
NEXT_PUBLIC_LOG_LEVEL=debug

# API Request Timeout (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000
